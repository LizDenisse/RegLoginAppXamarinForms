<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegLoginApp.Views.LoginPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                 <Grid VerticalOptions="CenterAndExpand">
                     <Grid.RowDefinitions>
                         <RowDefinition/>
                         <RowDefinition/>
                         <RowDefinition/>
                         <RowDefinition/>
                     </Grid.RowDefinitions>

                     <Entry Placeholder="Username" x:Name="EntryUser" Grid.Row=" 0"/>
                     <Entry Placeholder="Password" IsPassword="True" x:Name="EntryPassword" Grid.Row="1"/>
                     <Button Text="Login" Grid.Row="2" BackgroundColor="Pink" TextColor="Black" Clicked="Button_Clicked"/>
                     <Button Text="SignUp" Grid.Row="3" BackgroundColor="Pink" TextColor="Black" Clicked="Button_Clicked_1"/>

                </Grid>
            </StackLayout>  
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
